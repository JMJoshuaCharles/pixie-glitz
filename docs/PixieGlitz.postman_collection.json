{
    "info": {
      "_postman_id": "pixie-glitz-api",
      "name": "Pixie Glitz API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Signup",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n    \"name\": \"Admin User\",\n    \"email\": \"admin@pixiglitz.com\",\n    \"password\": \"123456\",\n    \"role\": \"admin\"\n}"
          },
          "url": {
            "raw": "http://localhost:5000/auth/signup",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["auth","signup"]
          }
        },
        "response": []
      },
      {
        "name": "Login",
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "var jsonData = pm.response.json();",
                "if(jsonData.token){",
                "    pm.environment.set(\"token\", jsonData.token);",
                "    console.log(\"Token saved to environment variable {{token}}.\");",
                "}"
              ],
              "type": "text/javascript"
            }
          }
        ],
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n    \"email\": \"admin@pixiglitz.com\",\n    \"password\": \"123456\"\n}"
          },
          "url": {
            "raw": "http://localhost:5000/auth/login",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["auth","login"]
          }
        },
        "response": []
      },
      {
        "name": "Add Product",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n    \"name\": \"Bracelet\",\n    \"description\": \"Handmade bracelet\",\n    \"price\": 550.75,\n    \"stock\": 15\n}"
          },
          "url": {
            "raw": "http://localhost:5000/products",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["products"]
          }
        },
        "response": []
      },
      {
        "name": "Get Products",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "url": {
            "raw": "http://localhost:5000/products",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["products"]
          }
        },
        "response": []
      },
      {
        "name": "Place Order",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            },
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n    \"total_amount\": 1200.50\n}"
          },
          "url": {
            "raw": "http://localhost:5000/orders",
            "protocol": "http",
            "host": ["localhost"],
            "port": "5000",
            "path": ["orders"]
          }
        },
        "response": []
      }
    ],
    "variable": [
      {
        "key": "token",
        "value": ""
      }
    ]
  }
  

  